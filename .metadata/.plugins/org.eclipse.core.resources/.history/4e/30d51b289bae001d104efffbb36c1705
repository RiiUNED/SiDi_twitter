package Comun;

import java.rmi.*;

/*
 * Interfaz remota del servidor
 * @autor: rsanchez628@alumno.uned.es
 * 			Ricardo Sanchez	
 */

public interface ServerInt extends Remote{
	/*
	 * Devuelve el mensaje
	 * @para name - cadena de caracteres con nombre
	 * @return - una cadena de caracteres
	 */
	
	public String decirHola(String nombre) throws java.rmi.RemoteException;
	
	//--------------------------------------------------
	
	/*
	 * Registra usuarios en la aplicacion
	 * @autor: rsanchez628@alumno.uned.es
	 * 			Ricardo Sanchez
	 */
	public void autenticarse (Usuario user) throws java.rmi.RemoteException;

}
